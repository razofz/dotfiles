	# i3bar_command i3bar -t
        status_command i3status
	mode hide #dock|hide|invisible
	modifier Mod1
	hidden_state hide # hide|show
	position bottom # bottom|top
	colors {
		background #116611
		separator #000000
		statusline #d3d3d3
		focused_workspace #aaaaaaa #55bb55 #eeeeee
		active_workspace #555555 #333333 #aaaaaa
		inactive_workspace #555555 #333333 #aaaaaa
		urgent_workspace #eb709b #eb709b #ffffff
	}
}

