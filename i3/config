########################################################################
# program/web page launch mode
########################################################################
# Press $mod+o followed by designated launch keys, or Escape/Return to launch
# programs or return to the default mode, respectively.
set $mode_launcher Launch: [w]eb [g]mail [f]acebook [h]:github-repositories
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym w exec firefox

    # open gmail quickly
    bindsym g exec "firefox https://gmail.com"; mode "default"
    # open facebook quickly
    bindsym f exec "firefox https://facebook.com"; mode "default"
    # open github repos quickly
    bindsym h exec "firefox https://github.com/razofz?tab=repositories"; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

########################################################################
# keyboard layout selection mode
########################################################################
# Press $mod+b followed by designated keyboard layout keys,
# or Escape/Return to return to the default mode.
set $keyboard_selector Select keyboard layout: [u]s [r]az [s]wedish
bindsym $mod+b mode "$keyboard_selector"

mode "$keyboard_selector" {
    # us layout, international variant
    bindsym u exec "setxkbmap us ; echo 'us' > ~/.keyboard_layout"; mode "default"
    # raz layout (us with only swedish keys added)
    bindsym r exec "setxkbmap raz; echo 'raz' > ~/.keyboard_layout"; mode "default"
    # swedish layout, no dead keys
    bindsym s exec "setxkbmap se -variant nodeadkeys; echo 'se' > ~/.keyboard_layout"; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

########################################################################
# i3-gaps
########################################################################

# for_window [class="^.*"] border pixel 3

# hide_edge_borders none #smart_no_gaps
# smart_borders yes # no_gaps #on

# gaps inner 0

set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
	bindsym o      mode "$mode_gaps_outer"
	bindsym i      mode "$mode_gaps_inner"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
	bindsym Shift+plus  gaps inner current plus 5
	bindsym Shift+minus gaps inner current minus 5
	bindsym 0     gaps inner current set 0

	bindsym Shift+Ctrl+plus  gaps inner all plus 5
	bindsym Shift+Ctrl+minus gaps inner all minus 5
	bindsym Shift+0     gaps inner all set 0

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

mode "$mode_gaps_outer" {
	bindsym Shift+plus  gaps outer current plus 5
	bindsym Shift+minus gaps outer current minus 5
	bindsym 0     gaps outer current set 0

	bindsym Shift+Ctrl+plus  gaps outer all plus 5
	bindsym Shift+Ctrl+minus gaps outer all minus 5
	bindsym Shift+0     gaps outer all set 0

	bindsym Return mode "default"
	bindsym Escape mode "default"
}


